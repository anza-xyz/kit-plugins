{
    "name": "kit-plugins-monorepo",
    "private": true,
    "scripts": {
        "build": "turbo run build --log-order grouped",
        "lint": "turbo run lint --log-order grouped",
        "lint:fix": "turbo lint:fix --log-order grouped && pnpm prettier --ignore-unknown --write '{.,!packages}/*'",
        "test": "turbo run test --log-order grouped",
        "publish-packages": "pnpm build && changeset publish"
    },
    "devDependencies": {
        "@changesets/changelog-github": "^0.5.2",
        "@changesets/cli": "^2.29.8",
        "@solana/eslint-config-solana": "^6.0.0",
        "@solana/kit": "^6.0.1",
        "@solana/prettier-config-solana": "0.0.6",
        "@types/node": "^25",
        "agadoo": "^3.0.0",
        "browserslist-to-esbuild": "^2.1.1",
        "eslint": "^9.39.2",
        "happy-dom": "^20.4.0",
        "prettier": "^3.8.1",
        "rimraf": "6.1.2",
        "tsup": "^8.5.1",
        "turbo": "^2.8.1",
        "typescript": "^5.9.3",
        "vitest": "^4.0.18",
        "ws": "^8.19.0"
    },
    "engines": {
        "node": ">=22.0"
    },
    "packageManager": "pnpm@10.15.1",
    "prettier": "@solana/prettier-config-solana",
    "pnpm": {
        "overrides": {
            "@solana/kit": "$@solana/kit"
        }
    }
}
